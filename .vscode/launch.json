{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript Tests",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/node_modules/mocha/bin/_mocha",
                "--timeout", "999999",
                "--colors",
                "${workspaceFolder}/test/autoDemo.ts" // Point to the TypeScript test file
            ],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "test",
                "PERFHUB_ENABLED": "false"
            },
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
